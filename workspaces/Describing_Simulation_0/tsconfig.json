{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./types"],
    "resolveJsonModule": true,
    "lib": ["ES2020"],
    "rootDir": ".",
    "outDir": "dist",
    "allowJs": false
  },
  "include": ["src", "tests"]
}
